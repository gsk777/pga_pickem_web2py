{{extend 'layout.html'}}
<br><br>
<div class="container col-lg-5 col-md-7 col-sm-9 col-11 pb-2">
    <a href="{{=schedule_url}}" class="btn btn-lg btn-block btn-dark p-3 home-buttons">Schedule</a>
</div>
<div class="container col-lg-5 col-md-7 col-sm-9 col-11 pb-2">
    <a href="{{=standings_url}}" class="btn btn-lg btn-block btn-dark p-3 home-buttons">Standings</a>
</div>
<div class="container col-lg-5 col-md-7 col-sm-9 col-11 pb-2">
    <a href="{{=rules_url}}" class="btn btn-lg btn-block btn-dark p-3 home-buttons">2021 Rules</a>
</div>
<div class="container col-lg-5 col-md-7 col-sm-9 col-11 pb-2">
    <a href="http://www.owgr.com/ranking" target="_blank" class="btn btn-lg btn-block btn-dark p-3 home-buttons">Official World Golf Ranking</a>
</div>
{{if is_admin == True: }}
<div class="container col-lg-5 col-md-7 col-sm-9 col-11 pb-2">
    <a href="{{=admin_url}}" class="btn btn-lg btn-block btn-dark p-3 home-buttons">Admin</a>
</div>
{{pass}}
<br>
<div id="event-slide" class="carousel slide container col-lg-8 col-11" data-ride="carousel">
    <ul class="carousel-indicators">
        <li data-target="#event-slide" data-slide-to="0" class="active"></li>
        <li data-target="#event-slide" data-slide-to="1"></li>
        <li data-target="#event-slide" data-slide-to="2"></li>
        <li data-target="#event-slide" data-slide-to="3"></li>
        <li data-target="#event-slide" data-slide-to="4"></li>
    </ul>
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img class="img-fluid rounded" src="{{=URL('static','images/TPCSawgrass.jpg')}}" alt="Players Championship">
            <div class="carousel-caption slide-caption text-left">
                <h5>The Players</h5>
                <h5>March 11-14</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid rounded" src="{{=URL('static','images/Augusta.jpg')}}" alt="The Masters">
            <div class="carousel-caption slide-caption text-left">
                <h5>The Masters</h5>
                <h5>April 8-11</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid rounded" src="{{=URL('static','images/Kiawah_Island.jpg')}}" alt="PGA Championship">
            <div class="carousel-caption slide-caption text-left">
                <h5>PGA Championship</h5>
                <h5>May 20-23</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid rounded" src="{{=URL('static','images/Torrey_Pines.jpg')}}" alt="US Open Championship">
            <div class="carousel-caption slide-caption text-left">
                <h5>US Open</h5>
                <h5>June 17-20</h5>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid rounded" src="https://i.postimg.cc/hG1tXqsc/Royal-St-Georges.png" alt="The Open">
            <div class="carousel-caption slide-caption text-left">
                <h5>The Open</h5>
                <h5>July 15-18</h5>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#event-slide" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#event-slide" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>
<br>
